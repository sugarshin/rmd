{
  "name": "rmd",
  "version": "0.1.1",
  "description": "Markdown editor on React",
  "repository": "git@github.com:sugarshin/rmd.git",
  "private": true,
  "scripts": {
    "start": "npm run jade && npm run browserify && npm run serve",
    "serve": "budo ./src/js/main.jsx --dir dest --live -v -- -t babelify -t stylify --extension='.jsx' | garnish",
    "jade": "jade src/ -o dest/",
    "browserify": "browserify -t babelify -t stylify --extension='.jsx' ./src/js/main.jsx -o ./dest/main.js",
    "replace-min": "replace 'main.js' 'main.min.js' dest/index.html",
    "uglify": "uglifyjs dest/main.js -m -c warnings=false --comments '/\\/*!/' -o dest/main.min.js",
    "build": "npm run jade && npm run replace-min && npm run browserify && npm run uglify",
    "deploy": "git subtree push --prefix=dest/ origin gh-pages --squash"
  },
  "author": "sugarshin",
  "engines": {
    "node": "0.12.x"
  },
  "license": "MIT",
  "devDependencies": {
    "babelify": "^6.0.2",
    "browserify": "^10.1.3",
    "budo": "^4.0.0",
    "garnish": "^2.1.3",
    "jade": "^1.9.2",
    "nib": "^1.1.0",
    "replace": "^0.3.0",
    "stylify": "^1.2.0",
    "uglify-js": "^2.4.21",
    "watchify": "^3.2.1"
  },
  "dependencies": {
    "insert-css": "^0.2.0",
    "react": "~0.13.2",
    "react-remarkable": "^1.1.1"
  }
}
